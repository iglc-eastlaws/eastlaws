@model Eastlaws.ViewModels.HomePageViewModel

<h1>Hello World</h1>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Home</title>
</head>
<body>
    <h1>Welcome</h1>
    <h3>@Model.CurrentGreeeting</h3>
    <br /><br />
    <div>
        <table>
            @foreach (var item in Model.Restaurants)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Id.ToString(), "Details", new { id = item.Id })
                    </td>
                    <td>@item.Name</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>